<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themeGreen"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/cameraStudioMenuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/roboto_black"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/allInOneEditorMenuText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_mono"
        android:textStyle="bold"
        android:text="Personalize your Day"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/cameraStudioMenuText"
        app:layout_constraintTop_toBottomOf="@+id/cameraStudioMenuText" />

    <TextView
        android:id="@+id/share"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/gradient_red"
        android:padding="15dp"
        android:text="Share"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/version"
        />

    <TextView
        android:id="@+id/rateUs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/gradient_blue"
        android:padding="15dp"
        android:text="Rate Us"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/share"
        />

    <TextView
        android:id="@+id/update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/gradient_red"
        android:padding="15dp"
        android:text="Check For Update"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rateUs"
        />

    <TextView
        android:id="@+id/privacy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/gradient_blue"
        android:padding="15dp"
        android:text="Privacy Policy"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update"
        />

    <TextView
        android:id="@+id/terms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/gradient_blue"
        android:padding="15dp"
        android:text="Terms &amp; Condition"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/privacy"
        />

    <TextView
        android:id="@+id/supportUs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/gradient_blue"
        android:padding="15dp"
        android:text="Support Us"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_black"
        android:gravity="center"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/terms"
        />

    <ImageView
        android:id="@+id/homeButtonMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cameraStudioMenuText"
        app:srcCompat="@drawable/ic_home" />

    <TextView
        android:id="@+id/poweredBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/roboto_mono"
        android:text="Powered By : Shark Bytes Lab"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/applovinAdMenu"
        app:layout_constraintEnd_toEndOf="@+id/supportUs"
        app:layout_constraintTop_toBottomOf="@+id/supportUs"
        app:layout_constraintStart_toStartOf="@+id/supportUs" />

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_mono"
        android:text="Version : "
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/allInOneEditorMenuText"
        app:layout_constraintTop_toBottomOf="@+id/allInOneEditorMenuText" />

    <com.applovin.mediation.ads.MaxAdView
        android:id="@+id/applovinAdMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        xmlns:maxads="http://schemas.applovin.com/android/1.0"
        maxads:adUnitId="d8246cbcadda9aa5"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </com.applovin.mediation.ads.MaxAdView>

</androidx.constraintlayout.widget.ConstraintLayout>