<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sharkBytesLab.myPlanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonalPlanner20">
        <activity
            android:name="com.sharkBytesLab.myPlanner.SignUpActivity"
            android:exported="true" />
        <activity
            android:name="com.sharkBytesLab.myPlanner.SignInActivity"
            android:exported="true" />
        <activity
            android:name="com.sharkBytesLab.myPlanner.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sharkBytesLab.myPlanner.MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>